FROM python:3
# Під'їднали 3тю версію пітона

# Стандартна папка для зберігання пітона
WORKDIR /usr/srs/app

# Вказуємо стандарний файл проектів джанга(фреймворк пітона), в якому
# прописані залежності джанга проекта. Та ./ в рабочу директорію, що вказали в воркдір
# в цьому файлі пропишему які будуть встановлені бібліотеки
COPY requirements.txt ./

# Команда виконується при запуску проекта: Встановлюємо залежності з файла
RUN pip install -r requirements.txt
